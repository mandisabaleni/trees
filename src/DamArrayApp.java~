import java.util.*;
import java.io.*;

/**Creates an array of Dams.
*@author Mandisa Baleni
*@author balenidiana@gmail.com
*/

public class DamArrayApp{

    public static String[] damArray;
    public static int opCount = 1;//instrumentation
    
    /**Runs main method, puts data of dams into an array.
     * @param args Receives arguments from the terminal.
     * @throws Tries to access the Dam document to run program and sends error message if issue arises.
    */
    public static void main (String[] args){        
        PrintWriter fw = null;
         
        try{
            File text = new File("damdoc.txt");
            Scanner input = new Scanner(text);
            fw = new PrintWriter( new FileOutputStream("opCountDamArray.txt"));
            
            damArray = new String[211];
            String[] d;
            input.nextLine();
            
            for(int i=0; i< damArray.length; i++){
                String sentence = input.nextLine();
                d= sentence.split(",", 45);
                
                damArray[i] = d[2] + " " + d[10] + " " + d[42];
            }
    
        
        }
        catch(Exception e){
            System.out.println(e.getMessage());
        }
      
        if (args.length == 0){
            printAllDams();
        }
        else{
            for(String s: args){
                printDam(s);
            } 
            fw.println(opCount);
            fw.close();
//            System.out.println("No. of comparisons: " + opCount);        
        }
              
    }
    /**Searches user input dam and prints it.
    * @param damName The user input dam.
    */
    public static void printDam(String damName){
        for (int i=0; i< damArray.length; i++){
            if(damArray[i].contains(damName)){
                System.out.println(damArray[i]);
                return;   
            }
            opCount++;//instrumentation
        }
        System.out.println("Dam not found");
        
    }
    /**Prints an entire array of dams.
    */    
    public static void printAllDams(){
        for (int i=0; i< damArray.length; i++){
            System.out.println(damArray[i]);
        }
    }
}